<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HpFragment"
    android:background="@drawable/gradient"
    >

    <TextView
        android:id="@+id/tv_manager_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_using_your_new_stats"
        android:textSize="35sp"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_manager_title"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="350dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/armor_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_armor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/armor_hp"
                    android:textSize="20sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="0dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_current_armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/zero"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/et_armor_edit"
                    app:layout_constraintStart_toEndOf="@+id/tv_armor_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_armor_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginHorizontal="12dp"
                    android:inputType="number"
                    android:minWidth="60dp"
                    android:gravity="center"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_armor_minus"
                    app:layout_constraintTop_toTopOf="parent"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/btn_armor_minus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/minus"
                    android:layout_marginEnd="3dp"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_armor_plus"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <Button
                    android:id="@+id/btn_armor_plus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/plus"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/health_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/armor_container">

                <TextView
                    android:id="@+id/tv_char_hp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/character_hp"
                    android:textSize="18sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="0dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_current_char_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/zero"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/et_char_edit"
                    app:layout_constraintStart_toEndOf="@+id/tv_char_hp_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_char_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:inputType="number"
                    android:minWidth="60dp"
                    android:minHeight="48dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_chp_minus"
                    app:layout_constraintTop_toTopOf="parent"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor"
                    />

                <Button
                    android:id="@+id/btn_chp_minus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/minus"
                    android:layout_marginEnd="3dp"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_chp_plus"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_chp_plus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/plus"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/temp_health_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/health_container">

                <TextView
                    android:id="@+id/tv_temp_hp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_hp"
                    android:textSize="20sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="0dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_current_temp_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/zero"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/et_temp_edit"
                    app:layout_constraintStart_toEndOf="@+id/tv_temp_hp_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_temp_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:inputType="number"
                    android:minWidth="60dp"
                    android:minHeight="48dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_temp_minus"
                    app:layout_constraintTop_toTopOf="parent"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor"
                    />

                <Button
                    android:id="@+id/btn_temp_minus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/minus"
                    android:layout_marginEnd="3dp"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_temp_plus"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_temp_plus"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/plus"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ab_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"

                app:layout_constraintTop_toBottomOf="@+id/temp_health_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
                <TextView
                    android:id="@+id/tv_armor_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/armor_break"
                    android:textSize="20sp"
                    android:paddingHorizontal="10dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ToggleButton
                    android:id="@+id/tb_armor_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/btn_color"
                    android:checked="false"

                    android:textColor="@color/text_color"
                    android:textOff="@string/intact"
                    android:textOn="@string/broken"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_armor_break"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ab_container"
                >

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_values"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_set_values"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.92" />

                <Button
                    android:id="@+id/btn_set_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_values"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_reset"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.92" />

                <Button
                    android:id="@+id/btn_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/info"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/text_color"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_set_values"
                    app:layout_constraintEnd_toStartOf="@+id/btn_reset"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>